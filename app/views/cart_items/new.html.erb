<h1>商品をカートに追加</h1>

<h2><%= @product.name %></h2>
<p>価格: <%= (@product.price) %>円</p>

<%= form_for :cart_item, url: cart_items_path do |f| %>
  <div>
    <%= f.label :qty, "数量" %>
    <%= f.number_field :qty, value: 1, min: 1 %>
  </div>
  <%= f.hidden_field :product_id, value: @product.id %>
  <div>
    <%= f.submit "カートに追加" %>
  </div>
<% end %>

<%= link_to '戻る', products_path %>