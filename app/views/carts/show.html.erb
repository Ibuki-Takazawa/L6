<h1>ショッピングカート</h1>

<% if @cart.cart_items.empty? %>
  <p>カートは空です。</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>価格</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.qty %></td>
          <td>¥<%= item.product.price %></td>
          <td><%= link_to '削除', cart_item_path(item), data: {"turbo-method": :delete} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>小計: <%= @cart.total_price %>円</h3>
<% end %>

<%= link_to '買い物を続ける', products_path %>
